root = true

[*]
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
indent_size = 2
indent_style = tab

[*.json]
indent_style = space

[*.{js,ts,tsx}]
indent_style = tab

[.*rc]
indent_style = space
indent_size = 2

[*.html]
indent_style = space
indent_size = 2
